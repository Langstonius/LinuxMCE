all-recursive:
	for dir in $(SUBDIRS); do cd $$dir; $(MAKE) all; cd ..; done
	
install-recursive:
	for dir in $(SUBDIRS); do cd $$dir; $(MAKE) install; cd ..; done
		
clean-recursive:
	for dir in $(SUBDIRS); do cd $$dir; $(MAKE) clean; cd ..; done

%.d: %.cpp
	@echo -n Computing dependencies for $< 
	@$(CXX) -M $(CPPFLAGS) $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$
	@echo " done"

