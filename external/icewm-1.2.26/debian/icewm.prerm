#! /bin/sh -e

#DEBHELPER#

case "$0" in
    *experimental.postinst)
    FLAVOR=-experimental
    ;;
    *lite.postinst)
    FLAVOR=-lite
    ;;
    *)
    FLAVOR=""
    ;;
esac

if [ "$1" = "remove" ]; then
   update-alternatives --remove x-window-manager /usr/bin/icewm$FLAVOR
   update-alternatives --remove x-session-manager /usr/bin/icewm-session$FLAVOR
fi

exit 0

