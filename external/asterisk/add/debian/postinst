#! /bin/sh
# postinst script for amp
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
		if [ ! -e /var/lib/mysql/asterisk ]; then
			#recreate databases
			echo 'drop database asterisk;' | /usr/bin/mysql || /bin/true
			echo 'create database asterisk;' | /usr/bin/mysql || /bin/true
			/usr/bin/mysql asterisk </usr/local/amp/install/newinstall.sql
			echo 'drop database asteriskcdrdb;' | /usr/bin/mysql || /bin/true
			echo 'create database asteriskcdrdb;' | /usr/bin/mysql || /bin/true
			/usr/bin/mysql asteriskcdrdb </usr/local/amp/install/cdr_mysql_table.sql
			#enable firewal for SIP and IAX2
			echo "insert into Firewall (Protocol,SourcePort,SourcePortEnd,DestinationPort,RuleType) values ('udp',4569,0,0,'core_input');" | /usr/bin/mysql pluto_main
			echo "insert into Firewall (Protocol,SourcePort,SourcePortEnd,DestinationPort,RuleType) values ('udp',5060,0,0,'core_input');" | /usr/bin/mysql pluto_main
			#enable oss module to speak in the house
			sed -r -i "s/(noload [=][>] chan_oss.so)/;\1/" /etc/asterisk/modules.conf
		fi
		if (getent passwd asterisk >/dev/null);then
			if [ "`getent passwd asterisk|awk -F: '{print $6}'`" = "/var/run/asterisk" ];then
				usermod -d /var/lib/asterisk asterisk
			fi
		else
    		adduser --system --group --home /var/lib/asterisk --gecos "Asterisk PBX daemon" asterisk
			adduser asterisk audio
		fi
		
		rm -f /etc/init.d/asterisk
		
		ln -sf /usr/sbin/amportal /etc/init.d/asterisk
		update-rc.d asterisk defaults 92 >/dev/null
		if [ -x "`which invoke-rc.d 2>/dev/null`" ]; then
			invoke-rc.d asterisk start || exit 0
		else
			/etc/init.d/asterisk start || exit 0
		fi
		
		pushd /usr/local/amp/install &>/dev/null
		./apply_conf.sh
		popd &>/dev/null
		
		chmod -R ug+rw /etc/asterisk/
		chmod 777 /var /var/lib/ /var/lib/asterisk/ /var/lib/asterisk/sounds/
		chmod -R ug+rw /var/lib/asterisk/sounds/
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


