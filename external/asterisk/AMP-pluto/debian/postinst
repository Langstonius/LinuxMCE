#! /bin/sh
# postinst script for amp
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
		if [ -z "$2" ]; then
			#recreate databases
			echo 'drop database asterisk;' | /usr/bin/mysql || /bin/true
			echo 'create database asterisk;' | /usr/bin/mysql || /bin/true
			/usr/bin/mysql asterisk </usr/local/amp/install/newinstall.sql
			echo 'drop database asteriskcdrdb;' | /usr/bin/mysql || /bin/true
			echo 'create database asteriskcdrdb;' | /usr/bin/mysql || /bin/true
			/usr/bin/mysql asteriskcdrdb </usr/local/amp/install/cdr_mysql_table.sql
			#enable asterisk daemon
			sed -r -i "s/RUNASTERISK=no/RUNASTERISK=yes/" /etc/default/asterisk
			sed -r -i "s/[#]RUNASTSAFE=yes/RUNASTSAFE=yes/" /etc/default/asterisk
			#enable firewal for SIP and IAX2
			echo "insert into Firewall (Protocol,SourcePort,SourcePortEnd,DestinationPort,RuleType) values ('udp',4569,0,0,'core_input');" | /usr/bin/mysql pluto_main
			echo "insert into Firewall (Protocol,SourcePort,SourcePortEnd,DestinationPort,RuleType) values ('udp',5060,0,0,'core_input');" | /usr/bin/mysql pluto_main
			#enable oss module to speak in the house
			sed -r -i "s/(noload [=][>] chan_oss.so)/;\1/" /etc/asterisk/modules.conf
		fi
		pushd /usr/local/amp/install &>/dev/null
		./apply_conf.sh
		popd &>/dev/null
		
		chmod -R ug+rw /etc/asterisk/
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


