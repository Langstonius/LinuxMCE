#! /bin/sh
# postinst script for amp
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
		if [ -z "$2" ]; then
			echo 'drop database asterisk;' | /usr/bin/mysql || /bin/true
			echo 'create database asterisk;' | /usr/bin/mysql || /bin/true
			/usr/bin/mysql asterisk </usr/local/amp/install/newinstall.sql
			echo 'drop database asteriskcdrdb;' | /usr/bin/mysql || /bin/true
			echo 'create database asteriskcdrdb;' | /usr/bin/mysql || /bin/true
			/usr/bin/mysql asteriskcdrdb </usr/local/amp/install/cdr_mysql_table.sql
		fi
		pushd /usr/local/amp/install &>/dev/null
		./apply_conf.sh
		popd &>/dev/null
		
#		chgrp -R www-data /var/www/pluto-admin/amp/{admin,amp.png,_asterisk,index.html,mainstyle.css,panel} /etc/asterisk
#		chmod +x /usr/lib/cgi-bin/vmail.cgi
#		chmod -R ug+rw /etc/asterisk/
#		chmod 777 /etc/asterisk /var/www/pluto-admin/amp
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


