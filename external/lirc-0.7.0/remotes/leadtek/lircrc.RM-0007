#####################################################################
begin xmms
    begin
        prog   = xmms
        button = POWER
        config = STOP
    end
    begin
        prog   = xmms
        button = FM
        config = PLAYPAUSE
    end
    begin
        prog   = xmms
        button = HELP
        config = SHUFFLE
    end
    begin
        prog   = xmms
        button = SCAN
        config = REPEAT
    end
    begin
        prog   = irexec
        button = OPTIONS
        config = echo "going to xmms select mode..."
        mode   = xmms_select
    end
    begin
        prog   = xmms
        button = CH_UP
        config = NEXT
    end
    begin
        prog   = xmms
        button = CH_DOWN
        config = PREV
    end
    begin
        prog   = xmms
        button = PC/TV
        config = FWD 3
        repeat = 2
    end
    begin
        prog   = xmms
        button = MENU
        config = BWD 3
        repeat = 2
    end
    begin
	prog   = irexec
