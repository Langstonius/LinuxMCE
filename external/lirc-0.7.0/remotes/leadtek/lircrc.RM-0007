    end
    begin
        prog   = xmms
        button = 4
        config = SELECT 4GHI
    end
    begin
        prog   = xmms
        button = 5
        config = SELECT 5JKL
    end
    begin
        prog   = xmms
        button = 6
        config = SELECT 6MNO
    end
    begin
        prog   = xmms
        button = 7
        config = SELECT 7PQRS
    end
    begin
        prog   = xmms
        button = 8
        config = SELECT 8TUV
    end
    begin
        prog   = xmms
        button = 9
        config = SELECT 9WXYZ
    end
    begin
        prog   = xmms
        button = RETURN
        config = SETPOS
    end
end xmms_select

# xmplayer
#####################################################################
begin mplayer
    begin
        prog   = mplayer
        button = POWER
        config = quit
        mode   = xmms
    end
    begin
	prog   = irexec
	button = VOL_UP
	config = aumix -p +5
        repeat = 1
    end
    begin
	prog   = irexec
	button = VOL_DOWN
	config = aumix -p -5
        repeat = 1
    end
    begin
        prog   = mplayer
        button = HELP
        config = pause
    end
    begin
        prog   = mplayer
        button = PC/TV
        config = fullscreen
    end
    begin
        prog   = mplayer
        button = CH_UP
        config = seek +10
        repeat = 1
    end
    begin
        prog   = mplayer
        button = CH_DOWN
        config = seek -10
        repeat = 1
    end
    begin
        prog   = mplayer
        button = RETURN
        config = seek 0 1\npause
    end
end mplayer
