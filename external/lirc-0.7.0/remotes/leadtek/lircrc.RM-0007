    end
    begin
        prog   = xmms
        button = 2
        config = TWO
    end
    begin
        prog   = xmms
        button = 3
        config = THREE
    end
    begin
        prog   = xmms
        button = 4
        config = FOUR
    end
    begin
        prog   = xmms
        button = 5
        config = FIVE
    end
    begin
        prog   = xmms
        button = 6
        config = SIX
    end
    begin
        prog   = xmms
        button = 7
        config = SEVEN
    end
    begin
        prog   = xmms
        button = 8
        config = EIGHT
    end
    begin
        prog   = xmms
        button = 9
        config = NINE
    end
    begin
        prog   = xmms
        button = 0
        config = ZERO
    end
    begin
        prog   = xmms
        button = RETURN
        config = SETPOS
    end
