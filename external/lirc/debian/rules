#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)


CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

KMODDIR=/lib/modules/$(KVERS)/misc

DRIVERS=
DRIVERS+=--with-driver=act200l
DRIVERS+=--with-driver=act220l
DRIVERS+=--with-driver=adaptec
DRIVERS+=--with-driver=alsa_usb
DRIVERS+=--with-driver=animax
DRIVERS+=--with-driver=atilibusb
DRIVERS+=--with-driver=atiusb
DRIVERS+=--with-driver=audio
#DRIVERS+=--with-driver=avermedia
#DRIVERS+=--with-driver=avermedia_vdomate
#DRIVERS+=--with-driver=avermedia98
#DRIVERS+=--with-driver=bestbuy
#DRIVERS+=--with-driver=bestbuy2
DRIVERS+=--with-driver=breakoutbox
DRIVERS+=--with-driver=bte
DRIVERS+=--with-driver=bw6130
DRIVERS+=--with-driver=caraca
#DRIVERS+=--with-driver=chronos
DRIVERS+=--with-driver=cmdir
DRIVERS+=--with-driver=comX
#DRIVERS+=--with-driver=cph06x
DRIVERS+=--with-driver=creative
DRIVERS+=--with-driver=creative_infracd
DRIVERS+=--with-driver=devinput
DRIVERS+=--with-driver=digimatrix
DRIVERS+=--with-driver=dsp
DRIVERS+=--with-driver=dvico
DRIVERS+=--with-driver=ea65
DRIVERS+=--with-driver=exaudio
#DRIVERS+=--with-driver=flyvideo
#DRIVERS+=--with-driver=gvbctv5pci
DRIVERS+=--with-driver=hauppauge
DRIVERS+=--with-driver=hauppauge_dvb
DRIVERS+=--with-driver=hercules_smarttv_stereo
DRIVERS+=--with-driver=igorplugusb
DRIVERS+=--with-driver=iguanaIR
DRIVERS+=--with-driver=imon
DRIVERS+=--with-driver=imon_knob
DRIVERS+=--with-driver=imon_pad
DRIVERS+=--with-driver=imon_rsc
DRIVERS+=--with-driver=irdeo
DRIVERS+=--with-driver=irdeo_remote
DRIVERS+=--with-driver=irman
DRIVERS+=--with-driver=irreal
DRIVERS+=--with-driver=it87
DRIVERS+=--with-driver=knc_one
#DRIVERS+=--with-driver=kworld
#DRIVERS+=--with-driver=leadtek_0007
#DRIVERS+=--with-driver=leadtek_0010
DRIVERS+=--with-driver=leadtek_pvr2000
DRIVERS+=--with-driver=livedrive_midi
DRIVERS+=--with-driver=livedrive_seq
DRIVERS+=--with-driver=logitech
DRIVERS+=--with-driver=lptX
DRIVERS+=--with-driver=mceusb
DRIVERS+=--with-driver=mceusb2
DRIVERS+=--with-driver=mediafocusI
DRIVERS+=--with-driver=mouseremote
DRIVERS+=--with-driver=mouseremote_ps2
DRIVERS+=--with-driver=mp3anywhere
DRIVERS+=--with-driver=nslu2
DRIVERS+=--with-driver=packard_bell
DRIVERS+=--with-driver=parallel
DRIVERS+=--with-driver=pcmak
DRIVERS+=--with-driver=pcmak_usb
DRIVERS+=--with-driver=pctv
DRIVERS+=--with-driver=pixelview_bt878
#DRIVERS+=--with-driver=pixelview_pak
#DRIVERS+=--with-driver=pixelview_pro
DRIVERS+=--with-driver=provideo
DRIVERS+=--with-driver=realmagic
DRIVERS+=--with-driver=remotemaster
DRIVERS+=--with-driver=sa1100
DRIVERS+=--with-driver=sasem
DRIVERS+=--with-driver=serial
DRIVERS+=--with-driver=silitek
DRIVERS+=--with-driver=sir
DRIVERS+=--with-driver=slinke
DRIVERS+=--with-driver=streamzap
DRIVERS+=--with-driver=tekram
DRIVERS+=--with-driver=tekram_bt829
DRIVERS+=--with-driver=tira
DRIVERS+=--with-driver=tvbox
DRIVERS+=--with-driver=udp
DRIVERS+=--with-driver=uirt2
DRIVERS+=--with-driver=uirt2_raw
DRIVERS+=--with-driver=usb_uirt_raw

config.status: configure
	dh_testdir
	# Add here commands to configure the package.
	$(MAKE) clean || :
	CFLAGS="$(CFLAGS)" ./configure --host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) --prefix=/usr --mandir=\$${prefix}/share/man --infodir=\$${prefix}/share/info --enable-sandboxed --with-driver=userspace

config-modules: configure
	dh_testdir
	$(MAKE) clean || :
	CFLAGS="$(CFLAGS)" ./configure --host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) --prefix=/usr --mandir=\$${prefix}/share/man --infodir=\$${prefix}/share/info --enable-sandboxed --with-driver=all --with-kerneldir="$(KSRC)" --with-moduledir="$(KMODDIR)" $(DRIVERS)

build-modules: config-modules
	dh_testdir
	$(MAKE) -C drivers
	$(MAKE) -C drivers install DESTDIR=$(CURDIR)/debian/lirc-pluto-modules

build: build-stamp

build-stamp:  config.status
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)
	#docbook-to-man debian/lirc-pluto.sgml > lirc-pluto.1

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp 

	# Add here commands to clean up after the build process.
	-$(MAKE) distclean
ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	cp -f /usr/share/misc/config.guess config.guess
endif


	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/lirc-pluto.
	$(MAKE) install DESTDIR=$(CURDIR)/debian/lirc-pluto
	rm -rf $(CURDIR)/debian/lirc-pluto/lib/modules
	cp -a $(CURDIR)/debian/lirc-pluto-modules/* $(CURDIR)/debian/lirc-pluto/
	rm -rf $(CURDIR)/debian/lirc-pluto-modules

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install config-modules build-modules
