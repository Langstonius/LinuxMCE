	streamdev-server.HTTPStreamType = 1
	streamdev-server.MaxClients = 1
	streamdev-server.ServerPort = 2004
	streamdev-server.StartHTTPServer = 1
	streamdev-server.StartServer = 1
	streamdev-server.SuspendMode = 1
