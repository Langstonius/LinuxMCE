use strict;
use warnings;
use lib '/etc/hotplug-perl';

use Hotplug::PCI;
use Hotplug::USB;
use Hotplug::ISAPNP;
use Hotplug::IEEE1394;
use Hotplug::INPUT;
use Hotplug::IDE;
use Hotplug::SCSI;

print "  Loading PCI modules...";
&load_all_pci_modules();
print "done!\n";

print "  Loading USB modules...";
&load_all_usb_modules();
print "done!\n";

print "  Loading ISAPNP modules...";
&load_all_isapnp_modules();
print "done!\n";

print "  Loading IDE modules...";
&load_all_ide_modules();
print "done!\n";

print "  Loading SCSI modules...";
&load_all_scsi_modules();
print "done!\n";

print "  Loading INPUT modules...";
&load_all_input_modules();
print "done!\n";

print "  Loading IEEE1394 modules...";
&load_all_ieee1394_modules();
print "done!\n";

# End
