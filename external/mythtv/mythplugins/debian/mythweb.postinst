#! /bin/sh

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>

CONFIG=/etc/mythtv/mythweb-settings.php

add_default_define() {
    variable="$1"
    value="$2"

    if ! grep -q "^[ 	]*define([ 	]*$variable[ 	]*,.*" $CONFIG; then
        sed -e "s/^\?>.*\$/    define($variable, $value);\n?>/" < $CONFIG > $CONFIG.new
        chown --reference=$CONFIG $CONFIG.new
        chmod --reference=$CONFIG $CONFIG.new
        mv $CONFIG.new $CONFIG
    fi
}

remove_define() {
    variable="$1"

    sed -e "/^[ 	]*define([ 	]*$variable[ 	]*/d" < $CONFIG > $CONFIG.new
    chown --reference=$CONFIG $CONFIG.new
    chmod --reference=$CONFIG $CONFIG.new
    mv $CONFIG.new $CONFIG
}

case "$1" in
    configure)

        # XXX - this should get settings from mythweb-settings.php if
        # it exists

        MYSQL_CONFIG=/etc/mythtv/mysql.txt
        db_host="`sed -n -e 's/^\(str  *\)\?DBHostName=\(.*\)$/\2/gp;' $MYSQL_CONFIG`"
        db_username="`sed -n -e 's/^\(str  *\)\?DBUserName=\(.*\)$/\2/gp;' $MYSQL_CONFIG`"
        db_password="`sed -n -e 's/^\(str  *\)\?DBPassword=\(.*\)$/\2/gp;' $MYSQL_CONFIG`"
        db_dbname="`sed -n -e 's/^\(str  *\)\?DBName=\(.*\)$/\2/gp;' $MYSQL_CONFIG`"

        if [ -n "$2" -a -e $CONFIG ] && dpkg --compare-versions "$2" lt 0.13-1; then
            echo "$CONFIG is too old; changes will be lost"
            echo "preserving old configuration in $CONFIG.old"
            mv $CONFIG $CONFIG.old
        fi

        touch $CONFIG.new
        chmod 600 $CONFIG.new
        if [ -e $CONFIG ]; then
            INPUT=$CONFIG
        else
            # Temporary, to avoid password exposure, real perms set below
            INPUT=/usr/share/mythtv/mythweb/config/conf.php.dist
        fi

#         define('db_host',     'localhost');
#        define('db_username', 'mythtv');
#        define('db_password', 'mythtv');
#        define('db_dbname',   'mythconverg');

        cat $INPUT | sed -e "
s/\(define('db_host', *'\)[^']*\('\)/\1$db_host\2/;
s/\(define('db_username', *'\)[^']*\('\)/\1$db_username\2/;
s/\(define('db_password', *'\)[^']*\('\)/\1$db_password\2/;
s/\(define('db_dbname', *'\)[^']*\('\)/\1$db_dbname\2/;
" > $CONFIG.new
        mv $CONFIG.new $CONFIG

        if ! dpkg-statoverride --list $CONFIG; then
            chown mythtv:www-data $CONFIG
            chmod 640 $CONFIG
        fi

        cachedir=/var/cache/mythweb/image_cache
        if ! dpkg-statoverride --list $cachedir; then
            chgrp www-data $cachedir
            chmod 1775 $cachedir
        fi

        if [ -n "$2" ] && dpkg --compare-versions "$2" lt 0.15-2; then
            add_default_define "'default_language'" "'English'"
            remove_define "'generic_date'"
            remove_define "'generic_time'"
        fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


