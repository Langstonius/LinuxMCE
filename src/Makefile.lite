SNR_CPPFLAGS=
SNR_LDFLAGS=

BINS=DCERouter pluto-lzo
DEVS=ZWave
LIBS=Serial SerializeClass PlutoUtils DCE

all: libs bins

bins: libs
	@for i in $(BINS); do make -C $$i -f Makefile.lite; done
	@for i in $(DEVS); do make -C $$i -f Makefile.lite bin; done

libs:
	@for i in $(LIBS); do make -C $$i -f Makefile.lite; done

clean:
	@rm -f lib/* bin/*
	@for i in $(LIBS) $(BINS) $(DEVS); do make -C $$i -f Makefile.lite clean; done

.PHONY: all bins libs clean
