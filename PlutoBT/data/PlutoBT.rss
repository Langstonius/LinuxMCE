//   
//    r_plutobt_menu
//
//----------------------------------------------------
//
RESOURCE MENU_PANE r_plutobt_menu
    {
    items=
        {
        MENU_ITEM { command=EPlutoBTCmdAppTest1; txt=qtn_appl_option_item1; },
        MENU_ITEM { command=EPlutoBTCmdAppTest2; txt=qtn_appl_option_item2; },
        MENU_ITEM { command=EPlutoBTCmdAppTest3; txt=qtn_appl_option_item3; },
        MENU_ITEM { command=EPlutoBTCmdAppTest4; txt=qtn_appl_option_item4; },
        MENU_ITEM { command=EAknCmdExit; txt="Exit"; }
        };
    }

//----------------------------------------------------
//   
//    r_plutobt_app_menu
//
//----------------------------------------------------
//
